<?xml version="1.0" encoding="utf-8"?>
<component name="NowPlaying" extends="Group">
    <children>
        <Rectangle
            color="0x000000DD"
            height="120"
            translation="[0,0]"
            width="1280"
        />
        <LayoutGroup translation="[50, 10]" layoutDirection="horiz" itemSpacings="[20, 0]">
            <Poster
                id="cover"
                width="100"
                height="100" />
            <LayoutGroup layoutDirection="vert">
                <Label id="title" />
                <Label id="artist" />
                <Label id="album" />
            </LayoutGroup>
        </LayoutGroup>
        <Group id="pausedOverlay" visible="false" translation="[0, 0]">
            <Rectangle
                color="0x444444DD"
                height="120"
                translation="[0,0]"
                width="1280"
            />
            <Label
                text="Paused"
                font="font:MediumSystemFont"
                color="0xffffffFF"
                translation="[575,50]" />
        </Group>
    </children>
    <interface>
        <field id="isPaused" type="boolean" onChange="setPaused" />
        <field id="trackTitle" type="string" onChange="setTitle" />
        <field id="trackArtist" type="string" onChange="setArtist" />
        <field id="trackAlbum" type="string" onChange="setAlbum" />
        <field id="trackCover" type="string" onChange="setCover" />
    </interface>
</component>