<?xml version="1.0" encoding="utf-8"?>
<component name="BaseScene" extends="Scene">
    <children>
        <Audio id="audioPlayer" contentIsPlaylist="true" />
        <Group id="content">
            <RadioGrid
                id="radioGrid"
                vertFocusAnimationStyle="floatingFocus"
                translation="[50,50]"
                basePosterSize="[150, 100]"
                numColumns="6"
                numRows="99"
                caption1NumLines="2"
                itemSpacing="[50, 40]" />
        </Group>
        <Label id="disclaimer" font="font:SmallestSystemFont" color="0xeeeeeeFF"
            translation="[50,450]"
            text="Music created by JAMENDO members. Content provided by JAMENDO" />
        <NowPlaying id="nowPlaying" translation="[0, 800]" />
        <Animation id="showNowPlayingAnimation" duration="0.5" repeat="false">
            <Vector2DFieldInterpolator key="[0.0, 1.0]" keyValue="[[0, 800], [0, 600]]"
                fieldToInterp="nowPlaying.translation" />
        </Animation>
        <Animation id="hideNowPlayingAnimation" duration="0.5" repeat="false">
            <Vector2DFieldInterpolator key="[0.0, 1.0]" keyValue="[[0, 600], [0, 800]]"
                fieldToInterp="nowPlaying.translation" />
        </Animation>
    </children>
</component>