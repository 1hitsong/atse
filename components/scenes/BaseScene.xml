<?xml version="1.0" encoding="utf-8"?>
<component name="BaseScene" extends="Scene">
    <children>
        <Audio id="audioPlayer" contentIsPlaylist="true" />
        <Group id="content">
            <RadioGrid
                id="radioGrid"
                vertFocusAnimationStyle="fixedFocus"
                translation="[50,50]"
                basePosterSize="[150, 100]"
                numColumns="6"
                numRows="99"
                caption1NumLines="2"
                itemSpacing="[50, 40]" />
        </Group>
        <Rectangle
            color="0x000000DD"
            height="120"
            translation="[0,600]"
            width="1280"
        />
        <LayoutGroup
            id="nowPlaying"
            layoutDirection="horiz"
            itemSpacings="[0, 25]"
            translation="[50, 610]">
            <Poster
                id="cover"
                width="100"
                height="100" />
            <LayoutGroup layoutDirection="vert">
                <Label id="title" />
                <Label id="artist" />
                <Label id="album" />
            </LayoutGroup>
        </LayoutGroup>
    </children>
</component>